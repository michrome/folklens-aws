{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation Template for Hello",
  "Parameters": {
    "ApiGateway": {
      "Type": "String",
      "Description": "The API Gatway calling this function"
    },
    "FolklensLambdaRole": {
      "Type": "String",
      "Description": "The ARN of the role assumed by this function"
    }
  },
  "Resources": {
    "HelloFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Architectures": ["arm64"],
        "Code": {
          "ZipFile": "exports.handler = async (event) => {return { message: \"Hello\"}};"
        },
        "Description": "Returns Hello",
        "Handler": "index.handler",
        "Role": { "Ref": "FolklensLambdaRole" },
        "Runtime": "nodejs14.x"
      }
    },

    "HelloRoute": {
      "Type": "AWS::ApiGatewayV2::Route",
      "Properties": {
        "ApiId": { "Ref": "ApiGateway" },
        "RouteKey": "GET /hello",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "HelloIntegration"
              }
            ]
          ]
        }
      }
    },

    "HelloIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": { "Ref": "ApiGateway" },
        "Description": "The integration that connects our HTTP API to our Lambda function. Note if we use the Quick create HTTP API syntax this is no longer needed.",
        "IntegrationType": "AWS_PROXY",
        "IntegrationUri": {
          "Fn::Join": [
            "",
            [
              "arn:",
              {
                "Ref": "AWS::Partition"
              },
              ":apigateway:",
              {
                "Ref": "AWS::Region"
              },
              ":lambda:path/2015-03-31/functions/",
              {
                "Fn::GetAtt": ["HelloFunction", "Arn"]
              },
              "/invocations"
            ]
          ]
        },
        "PayloadFormatVersion": "2.0"
      }
    },

    "HelloLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": { "Fn::Sub": "/aws/lambda/${HelloFunction}" },
        "RetentionInDays": 1
      }
    },

    "HelloPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": { "Ref": "HelloFunction" },
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {
          "Fn::Join": [
            "",
            [
              "arn:aws:execute-api:",
              { "Ref": "AWS::Region" },
              ":",
              { "Ref": "AWS::AccountId" },
              ":",
              { "Ref": "ApiGateway" },
              "/*"
            ]
          ]
        }
      }
    }
  }
}
